{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "client",
            "image": "reachmanjesh/complex-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "reachmanjesh/complex-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "reachmanjesh/complex-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "reachmanjesh/complex-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort" : 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client", "server"
            ]
        }
    ]
}